<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="530.0" prefWidth="350.0" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/null"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.NewOrderController">
    <children>
        <VBox>
            <children>
                <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#createOrder" prefHeight="90.0"
                                prefWidth="220.0"
                                style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87 #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 10;"
                                text="NOVÁ OBJEDNÁVKA" textFill="WHITE">
                            <font>
                                <Font name="Avenir Book" size="17.0"/>
                            </font>
                        </Button>
                        <Region prefHeight="100.0" prefWidth="350.0"/>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#fromDatabase" prefHeight="90.0"
                                prefWidth="220.0"
                                style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87 #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 10;"
                                text="VYBRAT Z DATABÁZE" textFill="WHITE">
                            <font>
                                <Font name="Avenir Book" size="17.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
                <HBox alignment="BOTTOM_RIGHT">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#backToOrderList" prefHeight="25.0"
                                prefWidth="80.0"
                                style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;"
                                text="ZPĚT" textFill="WHITE">
                            <font>
                                <Font name="Avenir Next Bold" size="13.0"/>
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" right="20.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
