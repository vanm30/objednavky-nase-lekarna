<VBox fx:id="customerInfo" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.lists.SavedCustomerController">
    <children>
      <HBox alignment="CENTER" onMouseClicked="#writeData" onTouchReleased="#writeData" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 10;">
         <children>
            <GridPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <columnConstraints>
                  <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
                  <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                      <Label fx:id="name" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                          <font>
                              <Font name="System Bold" size="14.0" />
                          </font>
                     <GridPane.margin>
                        <Insets bottom="10.0" />
                     </GridPane.margin>
                      </Label>
                  <Label text="Telefon: " GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label text="Adresa: " textAlignment="CENTER" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                      <Label fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="1">
                          <font>
                              <Font name="Avenir Book" size="13.0" />
                          </font>
                      </Label>
                      <Label fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="2">
                          <font>
                              <Font name="Avenir Book" size="13.0" />
                          </font>
                      </Label>
               </children>
            </GridPane>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
    </children>
    <padding>
        <Insets left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
