<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="customersList" alignment="TOP_CENTER" style="-fx-background-color: white;" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.lists.CustomerListController">
    <children>
        <VBox StackPane.alignment="CENTER">
            <children>
                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="customers">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
                <HBox alignment="CENTER" fillHeight="false" VBox.vgrow="NEVER">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#backToNewOrder" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #4f6573; -fx-background-radius: 100;" textFill="WHITE" HBox.hgrow="NEVER">
                            <font>
                                <Font name="Avenir Next Bold" size="13.0" />
                            </font>
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/back.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
