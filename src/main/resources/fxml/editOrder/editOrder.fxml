<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.editOrder.EditInfoController">
    <children>
        <VBox style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;">
            <children>
                <HBox>
                    <children>
                        <VBox>
                            <children>
                                <Label prefHeight="27.0" text="Číslo lístku">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                </Label>
                                <Label prefHeight="27.0" text="Klient">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                                <Label prefHeight="27.0" text="Telefon">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                                <Label prefHeight="27.0" text="Ulice">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                                <Label prefHeight="27.0" text="Obec">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                                <Label prefHeight="27.0" text="Datum přimu">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                                <Label prefHeight="27.0" text="Způsob vyzvednutí">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                        <Label prefHeight="27.0" text="Datum vyzvednutí">
                           <font>
                              <Font name="Avenir Book" size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Label>
                                <Label prefHeight="27.0" text="Datum splatnosti">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Label>
                            </children>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <VBox alignment="TOP_CENTER" fillWidth="false" HBox.hgrow="NEVER">
                            <children>
                                <TextField fx:id="orderNumber" alignment="CENTER" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="65.0" style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10" VBox.vgrow="NEVER">
                                    <font>
                                        <Font name="Avenir Book" size="13.0" />
                                    </font>
                                </TextField>
                                <TextField fx:id="name" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Nevyplněno" style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                                    <font>
                                        <Font name="Avenir Book" size="12.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TextField>
                                <TextField fx:id="phoneNumber" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Nevyplněno" style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                                    <font>
                                        <Font name="Avenir Book" size="12.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TextField>
                                <TextField fx:id="street" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Nevyplněno" style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                                    <font>
                                        <Font name="Avenir Book" size="12.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TextField>
                                <TextField fx:id="city" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Nevyplněno" style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                                    <font>
                                        <Font name="Avenir Book" size="12.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </TextField>
                                <DatePicker fx:id="dateBegin" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Datum přijmu" style="-fx-border-color: transparent">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </DatePicker>
                                <ChoiceBox fx:id="pickUpOption" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" style="-fx-border-color: transparent">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </ChoiceBox>
                        <DatePicker fx:id="datePickUp" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Datum vyzvednutí" style="-fx-border-color: transparent">
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </DatePicker>
                                <DatePicker fx:id="dateEnd" maxHeight="27.0" minHeight="27.0" prefHeight="27.0" prefWidth="130.0" promptText="Datum splatnosti" style="-fx-border-color: transparent">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </DatePicker>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
        <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity">
            <children>
                <Region HBox.hgrow="ALWAYS" />
                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#editItems" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #409988; -fx-background-radius: 5;" text="POLOŽKY" textFill="WHITE">
                    <font>
                        <Font name="Avenir Next Bold" size="12.0" />
                    </font>
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
        <Label text="Poznámka" textFill="#5ead87">
            <font>
                <Font name="Avenir Next Bold" size="12.0" />
            </font>
            <VBox.margin>
                <Insets left="25.0" />
            </VBox.margin>
        </Label>
        <VBox style="-fx-background-color: #d3d3d3 #d3d3d3; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
            <children>
                <TextArea fx:id="notes" style="-fx-background-color: white;">
                    <font>
                        <Font name="Avenir Book" size="12.0" />
                    </font>
                </TextArea>
            </children>
        </VBox>
      <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="darkButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#cancelEdit" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 100;" textFill="WHITE">
               <font>
                  <Font name="Avenir Next Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/back.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="60.0" />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#finishTask" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 100; -fx-background-color: #b97272;" textFill="#b97272">
               <font>
                  <Font name="Avenir Next Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/done.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#saveEdit" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 100; -fx-background-color: #409988;" textFill="WHITE">
               <font>
                  <Font name="Avenir Next Bold" size="12.0" />
               </font>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/save.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets right="60.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
    </children>
    <padding>
        <Insets top="20.0" />
    </padding>
</VBox>
