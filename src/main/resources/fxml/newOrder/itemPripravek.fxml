<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane style="-fx-background-color: transparent;" stylesheets="@/stylesheet.css"
          xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="cz.naseLekarna.gui.newOrder.ItemsController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Label text="Přípravek" textFill="#5ead87" GridPane.valignment="BOTTOM" GridPane.vgrow="NEVER">
            <font>
                <Font name="Avenir Next Bold" size="13.0"/>
            </font>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </Label>
        <HBox alignment="CENTER" style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;"
              GridPane.columnSpan="2147483647" GridPane.rowIndex="1" GridPane.rowSpan="2147483647"
              GridPane.vgrow="NEVER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <VBox style="-fx-background-color: #d3d3d3;">
                    <children>
                        <Label alignment="CENTER" prefHeight="23.0" text="Název">
                            <font>
                                <Font name="Avenir Book" size="15.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Label>
                        <Label alignment="CENTER" prefHeight="23.0" text="Počet">
                            <font>
                                <Font name="Avenir Book" size="15.0"/>
                            </font>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Label>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      HBox.hgrow="NEVER">
                    <children>
                        <TextField fx:id="itemPripravek" maxHeight="-Infinity" maxWidth="-Infinity"
                                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="23.0" prefWidth="200.0"
                                   promptText="Název" style="-fx-background-color: white; -fx-background-radius: 10;"
                                   VBox.vgrow="NEVER">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </TextField>
                        <TextField fx:id="itemPripravekAmount" maxHeight="-Infinity" maxWidth="-Infinity"
                                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="23.0" prefWidth="200.0"
                                   promptText="Počet" style="-fx-background-color: white; -fx-background-radius: 10;"
                                   VBox.vgrow="NEVER">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </TextField>
                    </children>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
        <Button fx:id="deleteButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" mnemonicParsing="false" onAction="#deleteItem" prefHeight="20.0" prefWidth="20.0"
                style="-fx-background-color: transparent; -fx-background-radius: 100;" textAlignment="CENTER"
                GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
            <font>
                <Font name="Avenir Book" size="10.0"/>
            </font>
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/delete.png"/>
                    </image>
                </ImageView>
            </graphic>
            <GridPane.margin>
                <Insets bottom="1.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
