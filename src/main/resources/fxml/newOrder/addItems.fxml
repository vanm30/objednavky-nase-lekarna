<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="TOP_CENTER" onKeyPressed="#test" style="-fx-background-color: white;" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.newOrder.OrderItemsController">
    <children>
        <VBox alignment="TOP_CENTER">
            <children>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="itemsField" alignment="TOP_CENTER" style="-fx-background-color: transparent;">
                     <children>
                            <HBox alignment="CENTER" VBox.vgrow="NEVER">
                                <children>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="addPripravek" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addPripravek" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color :#409988; -fx-background-radius: 5;" text="PŘÍPRAVEK" textFill="WHITE">
                                        <font>
                                            <Font name="Avenir Next Bold" size="12.0" />
                                        </font>
                                        <padding>
                                            <Insets left="5.0" right="5.0" />
                                        </padding>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="addRecept" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#addRecept" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color :#409988; -fx-background-radius: 5;" text="RECEPT" textFill="WHITE">
                                        <font>
                                            <Font name="Avenir Next Bold" size="12.0" />
                                        </font>
                                        <padding>
                                            <Insets left="5.0" right="5.0" />
                                        </padding>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS" />
                                </children>
                           <VBox.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </VBox.margin>
                            </HBox>
                     </children></VBox>
                    </content>
                </ScrollPane>
            <VBox fx:id="errorBox" alignment="BOTTOM_LEFT" prefHeight="40.0">
               <padding>
                  <Insets left="30.0" />
               </padding>
            </VBox>
                <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="46.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#backToOrderList" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #4f6573; -fx-background-radius: 5;" text="ZPĚT" textFill="WHITE">
                            <font>
                                <Font name="Avenir Next Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets left="5.0" right="5.0" />
                            </padding>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#nextToOrderInfo" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color :#409988; -fx-background-radius: 5;" text="DALŠÍ" textFill="WHITE">
                            <font>
                                <Font name="Avenir Next Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets left="5.0" right="5.0" />
                            </padding>
                        </Button>
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
            <StackPane.margin>
                <Insets left="20.0" right="20.0" />
            </StackPane.margin>
        </VBox>
    </children>
</StackPane>
