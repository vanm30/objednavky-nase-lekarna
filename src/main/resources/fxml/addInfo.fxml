<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.CustomerInfoController">
   <children>
      <Label text="Osobní údaje" textFill="#5ead87">
         <font>
            <Font name="Avenir Next Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" top="10.0" />
         </VBox.margin>
      </Label>
      <VBox style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Jméno Příjmení" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField prefWidth="150.0" promptText="Jméno a Příjmení" style="-fx-background-radius: 10;">
                     <font>
                        <Font name="Avenir Book" size="12.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Telefon" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField prefWidth="150.0" promptText="+420 " style="-fx-background-radius: 10;">
                     <font>
                        <Font name="Avenir Book" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Ulice" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField prefWidth="150.0" promptText="Ulice" style="-fx-background-radius: 10;">
                     <font>
                        <Font name="Avenir Book" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Obec" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField prefWidth="150.0" promptText="Obec" style="-fx-background-radius: 10;">
                     <font>
                        <Font name="Avenir Book" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="PSČ" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField prefWidth="150.0" promptText="PSČ" style="-fx-background-radius: 10;">
                     <font>
                        <Font name="Avenir Book" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Přidat do databáze" />
                  <Region HBox.hgrow="ALWAYS" />
                  <CheckBox alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" HBox.hgrow="NEVER" />
                  <Region HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Label text="Informace o doručení" textFill="#5ead87">
         <font>
            <Font name="Avenir Next Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" />
         </VBox.margin>
      </Label>
      <VBox style="-fx-background-color: #d3d3d3 #d3d3d3; -fx-background-radius: 10;">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Datum přimu" />
                  <Region HBox.hgrow="ALWAYS" />
                  <DatePicker prefWidth="150.0" promptText="Datum přijmu" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Způsob vyzvednutí" />
                  <Region HBox.hgrow="ALWAYS" />
                  <ChoiceBox fx:id="pickUpOption" prefWidth="150.0" />
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Datum výdeje" />
                  <Region HBox.hgrow="ALWAYS" />
                  <DatePicker prefWidth="150.0" promptText="Datum ukončení" />
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Label text="Poznámka" textFill="#5ead87">
         <font>
            <Font name="Avenir Next Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets left="25.0" />
         </VBox.margin>
      </Label>
      <VBox style="-fx-background-color: #d3d3d3 #d3d3d3; -fx-background-radius: 10;">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
         <children>
            <TextArea style="-fx-background-color: white;">
               <font>
                  <Font name="Avenir Book" size="12.0" />
               </font>
            </TextArea>
         </children>
      </VBox>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#back" style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 10;" text="ZPĚT" textFill="WHITE">
               <font>
                  <Font name="Avenir Next Bold" size="13.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#addItems" style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 10;" text="DALŠÍ" textFill="WHITE">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Avenir Next Bold" size="13.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
