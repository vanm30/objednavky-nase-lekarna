<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/null"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.CustomerInfoController">
    <children>
        <Label text="Osobní údaje" textFill="#5ead87">
            <font>
                <Font name="Avenir Next Bold" size="12.0"/>
            </font>
            <VBox.margin>
                <Insets left="25.0" top="10.0"/>
            </VBox.margin>
        </Label>
        <VBox style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Jméno Příjmení"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="name" prefWidth="150.0" promptText="Jméno a Příjmení"
                                   style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                            <font>
                                <Font name="Avenir Book" size="12.0"/>
                            </font>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Telefon"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="phoneNumber" prefWidth="150.0" promptText="+420 "
                                   style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                            <font>
                                <Font name="Avenir Book" size="12.0"/>
                            </font>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Ulice"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="street" prefWidth="150.0" promptText="Ulice"
                                   style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                            <font>
                                <Font name="Avenir Book" size="12.0"/>
                            </font>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Obec"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="city" prefWidth="150.0" promptText="Obec" style="-fx-border-color: transparent; -fx-border-radius: 10;-fx-background-radius: 10">
                            <font>
                                <Font name="Avenir Book" size="12.0"/>
                            </font>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Přidat do databáze"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <CheckBox fx:id="addToDatabase" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false"
                                  HBox.hgrow="NEVER"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <Label text="Informace o doručení" textFill="#5ead87">
            <font>
                <Font name="Avenir Next Bold" size="12.0"/>
            </font>
            <VBox.margin>
                <Insets left="25.0"/>
            </VBox.margin>
        </Label>
        <VBox style="-fx-background-color: #d3d3d3 #d3d3d3; -fx-background-radius: 10;">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Datum přimu"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <DatePicker fx:id="dateBegin" prefWidth="150.0" promptText="Datum přijmu" style="-fx-border-color: transparent"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Způsob vyzvednutí"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ChoiceBox fx:id="pickUpOption" prefWidth="150.0" style="-fx-border-color: transparent"/>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Datum výdeje"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <DatePicker fx:id="dateEnd" prefWidth="150.0" promptText="Datum ukončení" style="-fx-border-color: transparent"/>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <Label text="Poznámka" textFill="#5ead87">
            <font>
                <Font name="Avenir Next Bold" size="12.0"/>
            </font>
            <VBox.margin>
                <Insets left="25.0"/>
            </VBox.margin>
        </Label>
        <VBox style="-fx-background-color: #d3d3d3 #d3d3d3; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets left="20.0" right="20.0"/>
            </VBox.margin>
            <children>
                <TextArea fx:id="notes" style="-fx-background-color: white;">
                    <font>
                        <Font name="Avenir Book" size="12.0"/>
                    </font>
                </TextArea>
            </children>
        </VBox>
        <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="46.0">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#backToAddOrder" prefHeight="25.0"
                        prefWidth="80.0"
                        style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;"
                        text="ZPĚT" textFill="WHITE">
                    <font>
                        <Font name="Avenir Next Bold" size="12.0"/>
                    </font>
                    <padding>
                        <Insets left="5.0" right="5.0"/>
                    </padding>
                </Button>
                <Region HBox.hgrow="ALWAYS"/>
                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#addItems" prefHeight="25.0"
                        prefWidth="80.0"
                        style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;"
                        text="DALŠÍ" textFill="WHITE">
                    <font>
                        <Font name="Avenir Next Bold" size="12.0"/>
                    </font>
                    <padding>
                        <Insets left="5.0" right="5.0"/>
                    </padding>
                </Button>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>
</VBox>
