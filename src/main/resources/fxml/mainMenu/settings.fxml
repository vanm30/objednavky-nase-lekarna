<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" style="-fx-background-color: white;" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.mainMenu.SettingsController">
    <children>
      <VBox VBox.vgrow="ALWAYS">
         <children>
              <VBox alignment="TOP_CENTER" style="-fx-background-color: #d3d3d3; -fx-background-radius: 10;">
                  <children>
                      <HBox alignment="CENTER_LEFT">
                          <children>
                              <Label text="Aut. ukládání zákazníka">
                                  <font>
                                      <Font name="Avenir Book" size="13.0" />
                                  </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <CheckBox fx:id="autoUserSave" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" HBox.hgrow="NEVER" />
                          </children>
                          <VBox.margin>
                              <Insets />
                          </VBox.margin>
                      </HBox>
                  </children>
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <VBox.margin>
                      <Insets left="20.0" right="20.0" top="20.0" />
                  </VBox.margin>
              </VBox>
         </children>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="logInButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goBack" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 100;" textFill="WHITE">
               <font>
                  <Font name="Avenir Next Bold" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/delete_black.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#save" prefHeight="35.0" prefWidth="35.0" style="-fx-background-radius: 100; -fx-background-color: #409988;" textFill="WHITE">
               <font>
                  <Font name="Avenir Next Bold" size="12.0" />
               </font>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/done.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="60.0" right="60.0" top="20.0" />
         </VBox.margin>
      </HBox>
    </children>
</VBox>
