<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="TOP_CENTER" prefHeight="530.0" prefWidth="350.0" style="-fx-background-color: white;" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.gui.OrderController">
   <children>
      <VBox>
         <children>
            <HBox alignment="CENTER" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="350.0" VBox.vgrow="NEVER">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#addPripravek" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;" text="PŘÍPRAVEK" textFill="WHITE">
                     <font>
                        <Font name="Avenir Next Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#addRecept" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;" text="RECEPT" textFill="WHITE">
                     <font>
                        <Font name="Avenir Next Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <ScrollPane hbarPolicy="NEVER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="itemsField" alignment="TOP_CENTER" maxWidth="320.0" minWidth="320.0" prefWidth="320.0" style="-fx-background-color: white;" />
               </content>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </ScrollPane>
            <HBox alignment="CENTER" maxHeight="46.0" minHeight="46.0" prefHeight="46.0" prefWidth="350.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#back" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;" text="ZPĚT" textFill="WHITE">
                     <font>
                        <Font name="Avenir Next Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#finishOrder" prefHeight="25.0" prefWidth="80.0" style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;" text="HOTOVO" textFill="WHITE">
                     <font>
                        <Font name="Avenir Next Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
