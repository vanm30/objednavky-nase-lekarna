<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox fx:id="loginBackground" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0"
      stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cz.naseLekarna.gui.logIn.LogInController">
    <children>
        <ImageView fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logoNL.png"/>
            </image>
        </ImageView>
        <Label text="NAŠE LÉKÁRNA ">
            <font>
                <Font name="Avenir Book" size="16.0"/>
            </font>
        </Label>
        <VBox alignment="TOP_CENTER" style="-fx-background-radius: 10;">
            <children>
                <Label text="PŘIHLÁŠENÍ" textFill="#434343">
                    <font>
                        <Font name="Avenir Book" size="16.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <HBox style="-fx-background-color: white; -fx-background-radius: 10;">
                    <children>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/user.png"/>
                            </image>
                        </ImageView>
                        <TextField fx:id="userName" prefHeight="30.0" promptText="Uživatelské jméno"
                                   style="-fx-background-color: transparent; -fx-border-color: transparent;"
                                   HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Avenir Book" size="12.0"/>
                            </font>
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <Region prefHeight="20.0" VBox.vgrow="ALWAYS"/>
                <HBox style="-fx-background-color: white; -fx-background-radius: 10;">
                    <children>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/password.png"/>
                            </image>
                        </ImageView>
                        <PasswordField fx:id="password" prefHeight="30.0" promptText="Heslo"
                                       style="-fx-background-color: transparent; -fx-border-color: transparent;"
                                       HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="Avenir Book" size="12.0"/>
                            </font>
                            <padding>
                                <Insets left="5.0"/>
                            </padding>
                        </PasswordField>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </HBox>
            </children>
            <VBox.margin>
                <Insets top="40.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
        <VBox fx:id="errorBox" alignment="TOP_LEFT" prefHeight="50.0"/>
        <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                mnemonicParsing="false" onAction="#logIn" prefHeight="30.0" prefWidth="100.0"
                style="-fx-background-color: #5ead87#5ead87 #5ead87#5ead87; -fx-background-radius: 5;"
                text="PŘIHLÁSIT SE" textFill="WHITE">
            <font>
                <Font name="Avenir Next Bold" size="12.0"/>
            </font>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </Button>
        <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                mnemonicParsing="false" onAction="#newUser"
                style="-fx-background-color: transparent; -fx-background-radius: 5; -fx-border-color: #5ead87; -fx-border-radius: 5;"
                text="NOVÝ ZAMĚSTNANEC">
            <font>
                <Font name="Avenir Book" size="12.0"/>
            </font>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="40.0" left="10.0" right="10.0" top="60.0"/>
    </padding>
</VBox>
