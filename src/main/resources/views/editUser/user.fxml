<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:id="customerInfo" stylesheets="@/stylesheet.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.naseLekarna.controllers.editUser.UserController">
   <children>
      <Text fx:id="id" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
         <font>
            <Font size="1.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D3D3D3; -fx-border-radius: 10;" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Text fx:id="name" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#editUser" prefHeight="25.0" prefWidth="33.0" style="-fx-background-color: #409988; -fx-background-radius: 10;" textFill="WHITE" HBox.hgrow="NEVER">
               <font>
                  <Font name="Avenir Next Bold" size="13.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/save.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#deleteUser" prefHeight="25.0" prefWidth="33.0" style="-fx-background-color: #b97272; -fx-background-radius: 10;" textFill="WHITE" HBox.hgrow="NEVER">
               <font>
                  <Font name="Avenir Next Bold" size="13.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/delete_black.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="20.0" right="20.0" />
   </padding>
</VBox>
